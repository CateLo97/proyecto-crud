<h1 class="text-center">Todas las Notas</h1>
<div class="container-fluid my-5">
    <div class="row justify-content-center">
        {{#each notes}}
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{this.title}} 
                        <a href="/notes/edit/{{_id}}"><i class="bi bi-pencil"></i></a>
                    </h4>
                    <p class="text-center">{{this.description}}</p>
                    <form action="/note/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger w-100 btn-sm" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        {{else}}
        <div class="card mx-auto">
            <div class="card-body text-center"> 
                <h1>Hello {{user.name}}</h1>
                <p class="lead">There are not notes yet.</p>
                <a href="/notes/add" class="btn btn-primary w-100 btn-sm">Create One</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
